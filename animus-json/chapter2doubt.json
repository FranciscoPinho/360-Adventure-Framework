{
    "a-videosphere": {
        "id": "chapter2doubt",
        "src": "#clareaccused",
        "video-player":{
          "cutscene":false
        },
        "video-looper":{
            "loopBegin":10,
            "loopEnd":35
        },
        "music-change-emitter": {
            "newsource": "#music",
            "loop": "true",
            "volume": 0.3,
            "cacheDuration": "true"
        },
        "children":[
          {
            "a-entity": {
              "id": "newspapermodel",
              "class": "inter",
              "scripted-invisibility":{
                "onVisibilityAnimation":{
                  "sourcePosition":"-13 3 -9",
                  "targetPosition":"-13 -20 -9",
                  "duration":2
                },
                "onVisibilitySfx":{
                  "sfxSrc":"#newspaperfallingSfx",
                  "volume":0.5
                }
              },
              "gltf-model": "#newspaper",
              "position": "-13 3 -9",
              "rotation":"-80 45 0",
              "scale": "-20 20 20",
              "dialogue":{
                "dialogueTreeURL":"dialogue/animusdialogue.json",
                "dialogueTreeName":"newspaper",
                "spawn":{
                  "location":"look",
                  "zDistance":"-5",
                  "opacity":0.6
                },
                "sfx":{
                  "advanceSfx":"#hover",
                  "advanceVolume":1,
                  "spawnSfx":"#hover",
                  "spawnVolume":1,
                  "hoverChoiceSfx":"#hover",
                  "hoverChoiceVolume":1,
                  "choiceSfx":"#choiceSfx",
                  "choiceVolume":0.3
                },
                "choiceIcon":"#chooseIcon",
                "previouslyChosenIcon":"#previouslyChosenIcon",
                "examinableObject":true,
                "examinedIcon":"#examinedIcon",
                "removeSelfOnEnd":false,
                "autoplay":false
              },
              "hoverable":{
                  "sfx":{
                      "sfxSrc": "#hover",
                      "volume": 1
                    },
                  "feedback": "color",
                  "hoverIcon":"#examineIcon"
              }
            }
          }
        ]
    },
    "transitions":[
        {
            "transitionID":"lockeFirstAppearance",
            "on":[],
            "delaySeconds":0.5,
            "injectFlatVideo":{
                "id":"chap2doubt2d",
                "src":"#chap2doubtpart1",
                "video-player":{
                  "flatCutscene":true,
                  "removeEntityOnEnd":true
                },
                "nolook":true,
                "zDistance":-8,
                "width":8,
                "height":4.5,
                "scale":"1.5 1.5 1.5",
                "position":"1 1 -9",
                "rotation":"0 -45 0"
            }
          },
          {
            "transitionID":"dropnewspaper",
            "on":[
              {
                "chap2doubt2d":"seen"
              }
            ],
            "makeVisible":"newspapermodel"
          },
          {
            "transitionID":"examinenewspapermodel",
            "on":[
              {
                "newspapermodel":"examined"
              }
            ],
            "delaySeconds":1,
            "injectFlatVideo":{
                "id":"chap2doubt2-2d",
                "src":"#chap2doubtpart2",
                "video-player":{
                  "flatCutscene":true,
                  "removeEntityOnEnd":true
                },
                "nolook":true,
                "zDistance":-8,
                "width":8,
                "height":4.5,
                "scale":"1.5 1.5 1.5",
                "position":"1 1 -9",
                "rotation":"0 -45 0"
            }
          },
          {
            "transitionID":"readnewspaper",
            "on":[
              {
                "chap2doubt2-2d":"seen"
              }
            ],
            "goToDestination":"animus-json/despairjohnclare.json"
          }
    ]
}